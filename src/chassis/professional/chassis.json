    { "key": "hero.headline", "type": "text", "label": "Main Headline", "description": "Primary headline for the practice", "required": true, "maxLength": 80 },
    { "key": "hero.subheadline", "type": "text", "label": "Subheadline", "description": "Supporting text about the practice", "required": true, "maxLength": 160 },
    { "key": "services.headline", "type": "text", "label": "Services Heading", "description": "Title for the services section", "required": true, "maxLength": 60 },
    { "key": "services.items", "type": "list", "label": "Services", "description": "Services offered by the practice", "required": true },
    { "key": "team.headline", "type": "text", "label": "Team Heading", "description": "Title for the team section", "required": false, "maxLength": 60 },
    { "key": "team.members", "type": "list", "label": "Team Members", "description": "Doctors, staff, and their bios", "required": false },
    { "key": "stats.items", "type": "list", "label": "Practice Stats", "description": "Key numbers to highlight", "required": false },
    { "key": "testimonials.items", "type": "list", "label": "Patient Reviews", "description": "Testimonials from patients", "required": false },
    { "key": "faq.items", "type": "list", "label": "FAQ Items", "description": "Common patient questions", "required": false },
    { "key": "booking.services", "type": "list", "label": "Bookable Services", "description": "Services available for online booking", "required": false },
    { "key": "contact.headline", "type": "text", "label": "Contact Heading", "description": "Heading for the contact form", "required": true, "maxLength": 60 },
    { "key": "map.address", "type": "address", "label": "Office Address", "description": "Physical location for the map", "required": false }
  ],
  "keywords": ["lawyer", "accountant", "consultant", "therapist", "dentist", "doctor", "veterinarian", "financial advisor", "insurance", "real estate agent"],
